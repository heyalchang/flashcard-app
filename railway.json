{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd server && npm install && npm run build && cd .. && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "node server/dist/server.production.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "PORT": 8080,
      "NODE_ENV": "production"
    }
  }
}